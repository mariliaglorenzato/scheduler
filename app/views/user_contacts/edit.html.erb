<div class="container">
    <br>
    <div class="jumbotron">
        <div class="container">
            <h1>Contacts</h1>
            <%= link_to "New Contact", new_user_contact_path %>
        </div>
    </div>

    <%= link_to "<< back", :back %>
    <h2>Edit </h2>

    <%= form_for([@resource, @user_contact]) do |f| %>

    <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
    </div>

    <div class="field">
        <%= f.label :birth_date %><br />
        <%= f.date_field :birth_date, autofocus: true, autocomplete: "birth_date" %>
    </div>

    <div class="field">
        <p>User groups</p>
        <%= collection_select(:user_contact_group, :contact_group_id, ContactGroup.all, :id_as_string, :name, {:selected => @user_contact.user_contact_groups.map(&:contact_group_id)}, {:multiple => true, :size => 4}) %>
    </div>


    <div class="actions">
        <%= f.submit "Update", :class => "btn btn-primary" %>
    </div>
    <% end %>

</div>