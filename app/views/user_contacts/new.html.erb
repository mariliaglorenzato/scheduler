<div class="container">
  <br>
  <div class="jumbotron">
    <div class="container">
      <h1> New Contact</h1>
    </div>
  </div>

  <%= form_for([@resource, @user_contact]) do |f| %>
  <% if @user_contact.errors.any? %>
  <ul>
    <% @user_contact.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :birth_date %><br />
    <%= f.date_field :birth_date, autofocus: true, autocomplete: "birth_date" %>
  </div>

  <div class="form-group">
    <div class="field">
      <!-- <% f.label :group_ids %><br /> -->
      <%= collection_select(:user_contact_groups, :group_id, Group.all, :id, :name, {}, {:prompt => true, :multiple => true, :size => 5  }) %>
    </div>
  </div>

  <div class="actions">
    <br />
    <%= f.submit "save", :class => "btn btn-primary" %>
  </div>
  <% end %>
</div>